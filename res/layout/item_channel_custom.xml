<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/confirmlayout"
    android:layout_width="match_parent"
    android:layout_height="72dp">

    <ImageView
        android:id="@+id/ch_selected"
        android:layout_width="56dp"
        android:layout_height="match_parent"
        android:padding="18dp"
        android:visibility="invisible"
        app:srcCompat="@drawable/ic_selected"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/ch_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_toEndOf="@id/ch_selected"
        android:textAppearance="@style/TextAppearance_Toolbar"
        android:textColor="?android:attr/textColorPrimary"
        tools:text="Channel name" />

    <TextView
        android:id="@+id/ch_summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ch_name"
        android:layout_marginTop="1dp"
        android:layout_toEndOf="@id/ch_selected"
        android:textAppearance="@style/TextAppearance_Material2"
        android:textColor="?android:attr/textColorSecondary"
        tools:text="Channel summary" />

    <ImageButton
        android:id="@+id/ch_remove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="18dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:srcCompat="@drawable/ic_remove" />
</RelativeLayout>