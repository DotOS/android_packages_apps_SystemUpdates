<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/confirmlayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:clickable="true">

    <ImageView
        android:id="@+id/ch_selected"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_centerVertical="true"
        android:padding="18dp"
        android:tint="?android:attr/textColorPrimary"
        app:srcCompat="@drawable/outline_info_24px"
        android:visibility="visible" />

    <TextView
        android:id="@+id/ch_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_toEndOf="@id/ch_selected"
        android:text="@string/option_on_available"
        android:textAppearance="@style/TextAppearance_Toolbar"
        android:textColor="?android:attr/textColorSecondary" />
</RelativeLayout>