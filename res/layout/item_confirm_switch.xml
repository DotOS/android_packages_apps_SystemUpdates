<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/confirmlayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:visibility="gone"
    tools:visibility="visible">

    <ImageView
        android:id="@+id/ch_selected"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:padding="18dp"
        android:tint="?android:attr/colorAccent"
        android:visibility="visible"
        app:srcCompat="@drawable/ic_system_update" />

    <TextView
        android:id="@+id/ch_changed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_toEndOf="@id/ch_selected"
        android:textAppearance="@style/TextAppearance_Toolbar"
        android:textColor="?android:attr/textColorPrimary" />

    <Button
        android:id="@+id/confirmbtn"
        style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ch_selected"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="18dp"
        android:background="@drawable/bg_ripple"
        android:fontFamily="@font/google_sans_bold"
        android:text="@string/confirm"
        android:textAppearance="@style/TextAppearance_Material2"
        android:textColor="?android:attr/colorAccent" />

</RelativeLayout>