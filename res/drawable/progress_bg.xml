<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <shape android:tint="@color/cardBackground" android:thickness="12dp">
            <size android:height="12dp" />
            <corners android:radius="@dimen/dot_radius" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape android:tint="?android:attr/colorAccent" >
                <solid android:color="@color/default_qs_transparency"/>
                <size android:height="12dp" />
                <corners android:radius="@dimen/dot_radius" />
            </shape>
        </clip>
    </item>

</layer-list>